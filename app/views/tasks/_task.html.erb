<section class="task"
  data-id="<%= task.id %>"
  data-complete="<%= complete?(task) %>"
  data-path="<%= url_for(task) %>">

  <div class="title parallax-window">
    <div class="parallax-static-content">
      <h1><%= task.title %></h1>
    </div>
    <div class="parallax-background" style="background-image: url('https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/mountains.png');"></div>
  </div>

  <div class="description">
    <%= task.description_html %>
    <hr/>
  </div>

  <div class="resources">
    <%= render task.external_resources %>
  </div>

  <div class="status">
    <%= render partial: 'status', object: task, as: :task %>
  </div>
</section>
