<% if subscribed?(competency) %>
  <input
    data-path="<%= unsubscribe_competency_path(competency) %>"
    type="submit"
    class="competency-subscribe subscribed"
    value="I'm not interested in this anymore">
<% else %>
  <input
    data-path="<%= subscribe_competency_path(competency) %>"
    type="submit"
    class="competency-subscribe unsubscribed"
    value="This is important to me">
<% end %>
