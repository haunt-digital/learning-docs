<% cache mark_safe_cache_key(skill) do %>

<section class="skill"
  data-id="<%= skill.id %>"
  data-path="<%= url_for(skill) %>">

  <div class="header parallax-window">
    <div class="parallax-static-content">


      <span class="title">
        <h1><%= skill.title %></h1>
      </span>
    </div>
    <div class="parallax-background" style="background-image: url('<%= asset_path skill.banner.url %>');"></div>
  </div>

  <span class="modified">Last modified <%= l skill.updated_at, format: :short %></span>

  <div class="description">
    <%= skill.description_html %>
  </div>

  <div class="tasks">
    <hr/>

    <%= render partial: 'tasks/card', collection: skill.tasks, as: :task %>
  </div>
</section>

<% end %>
